---
pagination:
  data: collections.tagList
  size: 1
  alias: tag
permalink: /tags/{{ tag }}/
layout: layouts/base.njk
---

<h1>Articles avec le tag : #{{ tag }}</h1>

<div class="blog-list">
    {% set postslist = collections.blog | filterByTag(tag) | reverse %}
    {% for post in postslist %}
    <article class="blog-item">
        <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
        <div class="post-meta">
            <time>{{ post.data.date | readableDate }}</time>
            {% if post.data.section %}
            <span class="separator">•</span>
            <a href="/sections/{{ post.data.section }}/">{{ post.data.section }}</a>
            {% endif %}
        </div>
        {% if post.data.description %}
        <p>{{ post.data.description }}</p>
        {% endif %}
    </article>
    {% endfor %}
</div>

<a href="/tags/" class="back-link">← Tous les tags</a>
