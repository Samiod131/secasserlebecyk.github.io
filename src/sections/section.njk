---
pagination:
  data: collections.sectionList
  size: 1
  alias: section
permalink: /sections/{{ section }}/
layout: layouts/base.njk
---

<h1>Section : {{ section }}</h1>

<div class="blog-list">
    {% set postslist = collections.blog | filterBySection(section) | reverse %}
    {% for post in postslist %}
    <article class="blog-item">
        <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
        <div class="post-meta">
            <time>{{ post.data.date | readableDate }}</time>
        </div>
        {% if post.data.description %}
        <p>{{ post.data.description }}</p>
        {% endif %}
        {% if post.data.tags %}
        <div class="post-tags">
            {% for tag in post.data.tags %}
            <a href="{{ ('/tags/' + tag + '/') | url }}" class="tag">#{{ tag }}</a>
            {% endfor %}
        </div>
        {% endif %}
    </article>
    {% endfor %}
</div>

<a href="{{ '/sections/' | url }}" class="back-link">‚Üê Toutes les sections</a>
