---
layout: layouts/base.njk
---

<article class="blog-post">
    <header class="post-header">
        <h1>{{ title }}</h1>
        <div class="post-meta">
            <time datetime="{{ date }}">{{ date | readableDate }}</time>
            {% if section %}
            <span class="separator">•</span>
            <a href="{{ ('/sections/' + section + '/') | url }}" class="section-link">{{ section }}</a>
            {% endif %}
        </div>
        {% if tags %}
        <div class="post-tags">
            {% for tag in tags %}
            <a href="{{ ('/tags/' + tag + '/') | url }}" class="tag">#{{ tag }}</a>
            {% endfor %}
        </div>
        {% endif %}
    </header>
    
    <div class="post-content">
        {{ content | safe }}
    </div>
    
    <footer class="post-footer">
        <a href="{{ '/blog/' | url }}" class="back-link">← Retour au blog</a>
    </footer>
</article>
